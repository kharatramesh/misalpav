root@dosa:/trainer-project# cat project1.yaml
version: "3.9"
services:
  webserver:
    build:
      context: .
      dockerfile: ./frontend.df
    container_name: frontend
    ports:
    - "9090:80"
    volumes:
    - "/trainer-project:/var/www/html"
    depends_on:
    - database

  database:
    build:
      context: .
      dockerfile: ./db.df
    container_name: db
    volumes:
    - "hexavadapav:/var/lib/mysql"
    environment:
    - MYSQL_ROOT_PASSWORD=123

volumes:
  hexavadapav:
    driver: local

