root@vadapav:/scripts# cat a2.sh
#!/bin/bash


for((i=0;i<=2;i++))
do
echo -n "enter username:"
read u1
username[$i]=$u1
useradd -m ${username[$i]}
echo user ${username[$i]} is added successfully
done

echo ${username[0]}
echo ${username[@]}
