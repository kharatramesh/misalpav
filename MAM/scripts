root@vadapav:/scripts# cat users.sh
#!/bin/bash

echo -n "How many users you would like to add:"
read n1

for ((i=$n1;i>=1;i--))
do
        echo -n "enter username: "
        read u1
        useradd -m $u1
        echo $u1 added successfully
done
